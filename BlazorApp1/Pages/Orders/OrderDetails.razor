@page "/orderdetails/{id:int}"
@inject BlazorApp1.Services.OrderService OrderService
@using BlazorApp1.Components
@using BlazorApp1.ViewModels

<h3>Sipariş Detayları</h3>

@if (isLoading)
{
    <p>Yükleniyor...</p>
}
else if (order == null)
{
    <p class="text-danger">Sipariş bulunamadı.</p>
}
else
{
    <div class="row mb-3">
        <div class="col-12 col-md-6 col-lg-6">
            <p><strong>Sipariş ID:</strong> @order.OrderID</p>
            <p><strong>Müşteri:</strong> @order.CustomerName (@order.CustomerID)</p>
            <p><strong>Çalışan:</strong> @order.EmployeeName</p>
            <p><strong>Sipariş Tarihi:</strong> @order.OrderDate?.ToShortDateString()</p>
        </div>
        <div class="col-12 col-md-6 col-lg-6">
            <p><strong>Gerekli Tarih:</strong> @order.RequiredDate?.ToShortDateString()</p>
            <p><strong>Ülke:</strong> @order.ShipCountry</p>
            <p><strong>Şehir:</strong> @order.ShipCity</p>
            <p><strong>Toplam Tutar:</strong> @order.TotalAmount.ToString("C")</p>
        </div>
    </div>


    <h5>Ürünler</h5>

    @if (order.OrderDetails == null || !order.OrderDetails.Any())
    {
        <p class="text-danger">Bu siparişe ait ürün bulunamadı.</p>
    }
    else
    {
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Ürün ID</th>
                <th>Resim</th>
                <th>Ürün Adı</th>
                <th>Birim Fiyat</th>
                <th>Adet</th>
                <th>Kargo Ücreti</th>
                <th>İndirim</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in order.OrderDetails)
            {
                <tr>
                    <td>@item.ProductID</td>
                    <td>
                        <ProductImage ImageUrl="@item.ImageUrl" />
                    </td>
                    <td>@item.ProductName</td>
                    <td>@item.UnitPrice.ToString("C")</td>
                    <td>@item.Quantity</td>
                    <td>@order.Freight?.ToString("C")</td>
                    <td>@($"{item.Discount * 100:F0}%")</td>
                </tr>
            }
        </tbody>
    </table>
    }
}

@code {
    [Parameter] public int id { get; set; }
    OrderViewModel? order;
    bool isLoading = true;

    protected override async Task OnParametersSetAsync()
    {
        Console.WriteLine($"[OrderDetails] Yüklenen id: {id}");
        isLoading = true;
        order = await OrderService.GetOrderByIdAsync(id);
        isLoading = false;
    }
}
